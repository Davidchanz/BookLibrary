<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="content" alignment="CENTER" prefHeight="616.0" prefWidth="654.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dbtest.controller.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Hellow World!" />
    <TableView fx:id="table" onKeyPressed="#onDeleteMessage">
        <columns>
            <TableColumn fx:id="id" text="Id" />
            <TableColumn fx:id="name" onEditCommit="#onUpdateMessage" text="Message" />
            <TableColumn fx:id="openB" />
        </columns>
    </TableView>
    <TextField fx:id="inputText" />
    <Button mnemonicParsing="false" onAction="#ScanDirOnAction" text="ScanDir" />
    <Button fx:id="addMessage" onMouseClicked="#onAddMessage" text="Add Message" />
    <Button fx:id="updateTable" onMouseClicked="#onUpdateTable" text="Update" />
   <Button mnemonicParsing="false" onAction="#BigPictureModeOnAction" text="BigPictureMode" />
</VBox>
